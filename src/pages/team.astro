<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize all sliders with progress bars and horizontal scroll
    const sliders = [
      { id: 'functionalSlider', progressBarId: 'functionalProgressBar' },
      { id: 'nonFunctionalSlider', progressBarId: 'nonFunctionalProgressBar' },
      { id: 'powerTeamSlider', progressBarId: 'powerTeamProgressBar' },
      { id: 'batch22Slider', progressBarId: 'batch22ProgressBar' },
      { id: 'batch23Slider', progressBarId: 'batch23ProgressBar' },
      { id: 'batch24Slider', progressBarId: 'batch24ProgressBar' },
      { id: 'batch25Slider', progressBarId: 'batch25ProgressBar' }
    ]

    sliders.forEach(({ id, progressBarId }) => {
      initializeSliderWithProgressBar(id, progressBarId)
    })

    function initializeSliderWithProgressBar(sliderId, progressBarId) {
      const slider = document.getElementById(sliderId)
      const progressBar = document.getElementById(progressBarId)
      const slidingContainer = slider?.parentElement

      if (!slider || !progressBar || !slidingContainer) return

      const slides = slider.children
      const totalSlides = slides.length
      let currentSlide = 0
      const slideWidth = 280 + 24 // card width + gap

      // Create progress dots
      function createProgressDots(container, total, active) {
        container.innerHTML = ''
        for (let i = 0; i < total; i++) {
          const dot = document.createElement('div')
          dot.className = `progress-dot ${i === active ? 'active' : ''}`
          dot.addEventListener('click', () => goToSlide(i))
          container.appendChild(dot)
        }
      }

      // Update progress dots
      function updateProgressDots(container, active) {
        const dots = container.querySelectorAll('.progress-dot')
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === active)
        })
      }

      // Go to specific slide with scroll sync
      function goToSlide(slideIndex) {
        currentSlide = Math.max(0, Math.min(slideIndex, totalSlides - 1))
        const translateX = -currentSlide * slideWidth
        slider.style.transform = `translateX(${translateX}px)`
        updateProgressDots(progressBar, currentSlide)

        // Sync horizontal scroll position
        const scrollPosition = currentSlide * slideWidth
        slidingContainer.scrollLeft = scrollPosition
      }

      // Handle manual horizontal scroll
      function handleScroll() {
        const scrollLeft = slidingContainer.scrollLeft
        const newSlide = Math.round(scrollLeft / slideWidth)

        if (
          newSlide !== currentSlide &&
          newSlide >= 0 &&
          newSlide < totalSlides
        ) {
          currentSlide = newSlide
          updateProgressDots(progressBar, currentSlide)
        }
      }

      // Initialize
      createProgressDots(progressBar, totalSlides, currentSlide)
      goToSlide(0)

      // Add scroll event listener for manual scrolling
      slidingContainer.addEventListener('scroll', handleScroll)

      // Handle window resize
      let resizeTimeout
      window.addEventListener('resize', () => {
        clearTimeout(resizeTimeout)
        resizeTimeout = setTimeout(() => {
          goToSlide(currentSlide)
        }, 100)
      })

      // Touch/swipe support for mobile
      let startX = 0
      let isDragging = false

      slider.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX
        isDragging = true
      })

      slider.addEventListener('touchmove', (e) => {
        if (!isDragging) return
        e.preventDefault()
      })

      slider.addEventListener('touchend', (e) => {
        if (!isDragging) return
        isDragging = false

        const endX = e.changedTouches[0].clientX
        const diffX = startX - endX

        // Swipe threshold
        if (Math.abs(diffX) > 50) {
          if (diffX > 0 && currentSlide < totalSlides - 1) {
            goToSlide(currentSlide + 1)
          } else if (diffX < 0 && currentSlide > 0) {
            goToSlide(currentSlide - 1)
          }
        }
      })
    }
  })
</script>
