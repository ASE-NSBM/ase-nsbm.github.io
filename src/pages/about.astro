<style>
  /* Base Styles */
  section {
    margin-bottom: 6rem;
    opacity: 1; /* Changed from 0 to make sections initially visible */
    transform: translateY(0); /* Changed from 20px to fix initial position */
  }

  /* Fix heading visibility */
  .section-heading {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
    color: rgb(
      var(--accent)
    ); /* Direct color instead of gradient for better visibility */
    position: relative;
    font-weight: bold;
  }

  .section-heading::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(
      90deg,
      rgb(var(--accent)),
      rgb(var(--accent-light))
    );
    border-radius: 2px;
  }

  /* Hero section - updated to work with PageLayout */
  .hero-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem 0 4rem;
    margin-bottom: 2rem;
  }

  .logo-container {
    margin-bottom: 2rem;
  }

  .logo-pulse {
    animation: pulse 2s infinite;
    width: 200px;
    height: 200px;
  }

  .title {
    font-size: 4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    transform: translateY(30px);
    opacity: 0;
    animation: slideUp 0.8s forwards ease-out;
    animation-delay: 0.3s;
    line-height: 1.2;
    text-align: center;
  }

  .text-accent {
    color: rgb(49, 49, 160);
    text-shadow: 0 0 5px rgba(0, 0, 139, 0.5); /* Add text shadow for emphasis */
  }

  .text-neon-green {
    color: #39ff14; /* Neon green color */
    text-shadow: 0 0 5px #39ff14; /* Neon glow effect */
    font-weight: 900; /* Make bolder */
  }

  .subtitle {
    font-size: 1.5rem;
    font-weight: 400;
    color: #e0e0e0;
    transform: translateY(30px);
    opacity: 0;
    animation: slideUp 0.8s forwards ease-out;
    animation-delay: 0.6s;
  }

  /* Keep original h2 style for non-section headings if needed */
  h2:not(.section-heading) {
    font-size: 2.5rem;
    margin-bottom: 2rem;
    text-align: center;
    background: linear-gradient(
      90deg,
      rgb(var(--accent)),
      rgb(var(--accent-light))
    );
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
  }

  h2:not(.section-heading)::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 4px;
    background: linear-gradient(
      90deg,
      rgb(var(--accent)),
      rgb(var(--accent-light))
    );
    border-radius: 2px;
  }

  /* The rest of your existing styles */
  /* ...existing code... */

  /* Additional CSS to ensure heading visibility in dark mode */
  :global(.dark) .section-heading {
    color: rgb(var(--accent-light)); /* Brighter color for dark mode */
  }

  :global(.dark) .text-neon-green {
    text-shadow: 0 0 8px #39ff14; /* Stronger shadow in dark mode */
  }

  .fade-in-section {
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .typing-text {
    border-right: 3px solid rgb(var(--accent));
    white-space: nowrap;
    overflow: hidden;
    animation:
      typing 3.5s steps(30, end) 1s forwards,
      blink-caret 0.75s step-end infinite;
    width: 0;
  }

  /* About Section */
  /* About Section */
  .about-content {
    display: flex;
    gap: 2rem;
    align-items: center;
    flex-wrap: wrap;
  }

  .about-text {
    flex: 1;
    min-width: 300px;
    font-size: 1.1rem;
    line-height: 1.7;
    text-align: justify;
  }

  .about-image {
    flex: 1;
    min-width: 300px;
    display: flex;
    justify-content: center;
    position: relative;
  }

  .floating-icons-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* 3 columns */
    gap: 1.5rem; /* Space between icons */
    width: 100%;
    max-width: 300px; /* Adjust based on your design */
  }

  .icon {
    font-size: 2.5rem;
    text-align: center;
    opacity: 0;
    transform: scale(0.8);
    animation: floatIn 0.8s ease-out forwards;
  }

  /* Add staggered delays for each icon */
  .icon:nth-child(1) {
    animation-delay: 0.1s;
  }
  .icon:nth-child(2) {
    animation-delay: 0.2s;
  }
  .icon:nth-child(3) {
    animation-delay: 0.3s;
  }
  .icon:nth-child(4) {
    animation-delay: 0.4s;
  }
  .icon:nth-child(5) {
    animation-delay: 0.5s;
  }
  .icon:nth-child(6) {
    animation-delay: 0.6s;
  }
  .icon:nth-child(7) {
    animation-delay: 0.7s;
  }
  .icon:nth-child(8) {
    animation-delay: 0.8s;
  }
  .icon:nth-child(9) {
    animation-delay: 0.9s;
  }
  .icon:nth-child(10) {
    animation-delay: 1s;
  }
  .icon:nth-child(11) {
    animation-delay: 1.1s;
  }
  .icon:nth-child(12) {
    animation-delay: 1.2s;
  }
  .icon:nth-child(13) {
    animation-delay: 1.3s;
  }
  .icon:nth-child(14) {
    animation-delay: 1.4s;
  }
  .icon:nth-child(15) {
    animation-delay: 1.5s;
  }

  /* Float-in animation */
  @keyframes floatIn {
    0% {
      opacity: 0;
      transform: scale(0.8) translateY(20px);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  /* Hover effect for icons */
  .icon:hover {
    transform: scale(1.1);
    transition: transform 0.3s ease;
  }

  /* Timeline Section */
  .timeline {
    position: relative;
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    width: 4px;
    background: linear-gradient(
      to bottom,
      rgba(var(--accent), 0.2),
      rgba(var(--accent), 0.8)
    );
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -2px;
    border-radius: 2px;
  }

  .timeline-item {
    padding: 10px 40px;
    position: relative;
    width: 50%;
    box-sizing: border-box;
    margin: 2rem 0;
  }

  .timeline-item:nth-child(odd) {
    left: 0;
    text-align: right;
  }

  .timeline-item:nth-child(even) {
    left: 50%;
    text-align: left;
  }

  .timeline-dot {
    width: 20px;
    height: 20px;
    background-color: rgb(var(--accent));
    border-radius: 50%;
    position: absolute;
    top: 20px;
    right: -10px;
    z-index: 10;
    box-shadow: 0 0 10px rgba(var(--accent), 0.5);
  }

  .timeline-item:nth-child(even) .timeline-dot {
    left: -10px;
    visibility: hidden;
  }

  .timeline-content {
    padding: 20px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--accent), 0.2);
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    opacity: 0;
    transform: translateX(50px);
    transition: all 0.6s ease;
  }

  .timeline-item:nth-child(even) .timeline-content {
    transform: translateX(-25px);
  }

  .timeline-content h3 {
    color: rgb(var(--accent));
    margin-top: 0;
  }

  /* Mission and Vision Section */
  .mission-container {
    text-align: center;
  }

  .mission-cards {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .mission-card {
    flex: 1;
    min-width: 250px;
    max-width: 350px;
    padding: 2rem;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(var(--accent), 0.2);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }

  .mission-card:hover {
    transform: translateY(-10px);
  }

  .card-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: #39ff14; /* Neon green color */
  }

  .card-icon svg {
    width: 48px;
    height: 48px;
    stroke: #39ff14; /* Neon green color */
  }

  /* Team Section */
  .team-container {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .team-image-container {
    flex: 1;
    min-width: 300px;
    overflow: hidden;
    border-radius: 10px;
  }

  .team-image {
    width: 100%;
    height: auto;
    transition: transform 0.5s ease;
  }

  .team-image:hover {
    transform: scale(1.05);
  }

  .team-text {
    flex: 1;
    min-width: 300px;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .cta-button {
    margin-top: 2rem;
  }

  .cta-button a {
    display: inline-block;
    padding: 12px 24px;
    background: linear-gradient(
      90deg,
      rgb(var(--accent)),
      rgb(var(--accent-light))
    );
    color: white;
    text-decoration: none;
    border-radius: 30px;
    font-weight: 600;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    box-shadow: 0 5px 15px rgba(var(--accent), 0.4);
  }

  .cta-button a:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(var(--accent), 0.6);
  }

  /* Animations */
  @keyframes pulse {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      transform: scale(1);
    }
  }

  @keyframes slideUp {
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  @keyframes blink-caret {
    from,
    to {
      border-color: transparent;
    }
    50% {
      border-color: rgb(var(--accent));
    }
  }

  @keyframes floatUp {
    0%,
    100% {
      transform: translateY(0) translateX(-50%);
    }
    50% {
      transform: translateY(-15px) translateX(-50%);
    }
  }

  @keyframes floatRight {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(15px);
    }
  }

  @keyframes floatLeft {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-15px);
    }
  }

  @keyframes floatDown {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(15px);
    }
  }

  .fade-in {
    animation: fadeIn 1s forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .slide-right {
    transform: translateX(-50px);
    opacity: 0;
  }

  .slide-left {
    transform: translateX(50px);
    opacity: 0;
  }

  .show {
    opacity: 1;
    transform: translateY(0);
  }

  .show .slide-right,
  .show .slide-left {
    transform: translateX(0);
    opacity: 1;
  }

  /* Dark mode adjustments */
  :global(.dark) .about-container {
    color: #e0e0e0;
  }

  :global(.dark) .mission-card,
  :global(.dark) .timeline-content {
    background: rgba(30, 30, 30, 0.7);
    border-color: rgba(var(--accent), 0.3);
  }

  /* Responsive styles */
  @media (max-width: 768px) {
    .title {
      font-size: 3rem;
    }

    .timeline::before {
      left: 31px;
    }

    .timeline-item {
      width: 100%;
      padding-left: 70px;
      padding-right: 25px;
    }

    .timeline-item:nth-child(odd) {
      left: 0;
      text-align: left;
    }

    .timeline-item:nth-child(even) {
      left: 0;
    }

    .timeline-dot {
      left: 21px;
      right: auto;
    }

    .timeline-content {
      transform: translateX(0) !important;
    }

    .mission-cards {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

<script>
  // Intersection Observer for scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('.fade-in-section')

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('show')
          }
        })
      },
      {
        threshold: 0.1
      }
    )

    sections.forEach((section) => {
      observer.observe(section)
    })
  })
</script>
