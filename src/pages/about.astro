---
import PageLayout from '@/layouts/PageLayout.astro'
import { Image } from 'astro:assets'
import logo from '@/assets/logo.svg'
import config from '@/theme.config'

// You'll need to create or import these images
// These are placeholders - replace with actual image imports
const teamImage =
  'https://images.unsplash.com/photo-1522071820081-009f0129c71c?q=80&w=2070'

// Create proper frontmatter for PageLayout
const frontmatter = {
  title: 'About | Association of Software Engineering',
  description:
    'Learn about the Association of Software Engineering at NSBM, our history, mission, and key events',
  activeHeaderLink: 'About',
  searchable: true
}
---

<PageLayout {frontmatter}>
  <!-- Hero Section -->
  <div class="hero-container">
    <div class="logo-container fade-in">
      <Image
        src={logo}
        alt="ASE Logo"
        width={200}
        height={200}
        class="logo-pulse"
      />
    </div>

    <h1 class="title slide-up">
      <span class="text-accent">{'Association of'}</span>
      <br />
      <span class="text-neon-green">{'Software Engineering'}</span>
    </h1>

    <div class="subtitle slide-up-delay">
