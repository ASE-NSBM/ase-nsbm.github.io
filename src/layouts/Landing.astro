<div class="launch-overlay" id="launchOverlay">
    <button class="launch-button" id="launchButton">
        <span>LAUNCH NOW</span>
        <div class="rocket">ðŸš€</div>
    </button>
</div>

<style>
    .launch-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(45deg, #0a192f, #064e3b);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .launch-button {
        position: relative;
        padding: 20px 60px;
        border: none;
        border-radius: 50px;
        background: linear-gradient(90deg, #10b981, #2563eb);
        color: white;
        font-size: 24px;
        font-weight: bold;
        cursor: pointer;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 0 30px rgba(16, 185, 129, 0.5);
    }

    .launch-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 0 50px rgba(37, 99, 235, 0.6);
    }

    .launch-button .rocket {
        position: absolute;
        font-size: 24px;
        opacity: 0;
        transition: all 0.3s ease;
    }

    .launch-button:hover .rocket {
        opacity: 1;
        transform: translateX(50px);
    }

    .launch-active {
        animation: launchEffect 1.5s ease-in forwards;
    }

    @keyframes launchEffect {
        0% {
            transform: scale(1);
            opacity: 1;
        }
        50% {
            transform: scale(1.2);
            opacity: 0.5;
        }
        100% {
            transform: scale(0);
            opacity: 0;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const launchButton = document.getElementById('launchButton')
        const launchOverlay = document.getElementById('launchOverlay')

        launchButton.addEventListener('click', () => {
            launchButton.style.pointerEvents = 'none'
            launchOverlay.classList.add('launch-active')

            setTimeout(() => {
                window.location.href = '/'
            }, 1500)
        })
    })
</script>
